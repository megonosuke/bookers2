<h1>User info</h1>

<% if @user.errors.any? %>
  <h2><%= @user.errors.count %>error prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <label for="inputName">Name</label><br>
  <%= f.text_field :name, autofocus: true, id:"inputName" %><br>

  <label for="inputImage">Image</label><br>
  <%= f.file_field :profile_image, placeholder: "profile_image", accept: "image/*" %><br>

  <label for="inputIntroduction">Introduction</label><br>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %><br>

  <%= f.submit "Update User" %>
<% end %>