<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orenge;">
      <%= render 'books/info', book: @book, user: current_user %>
    </div>



    <div class="col-lg-8">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <th>image</th>
          <th>name</th>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>