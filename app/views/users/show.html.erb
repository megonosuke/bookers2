<div class="container">
  <div class="row">
    <div class="col-lg-4" >
      <%= render 'books/info', book: @book, user: @user %>
    </div>


    <div class="col-lg-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>

        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(current_user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>