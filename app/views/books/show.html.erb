

<div>
  <h1>Book detail</h1>
  <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <p>
    <% if @book.user == current_user %>
      <%= link_to "Edit",edit_book_path %>
    <% end %>
  </p>
  <p>
    <% if @book.user == current_user %>
      <%= link_to "Destroy",book_path, method: :delete, "data-confirm" => "本当に消しますか?" %>
    <% end %>
  </p>
  <p><%= @book.user.name %></p>
</div>