<h1>User info</h1>
<p>image <%= image_tag 'sample-author1.jpg' %></p>




<%= link_to edit_user_path(current_user), class: 'btn btn-default' do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book' %>

<% end %>