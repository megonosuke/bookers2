<h1>User info</h1>
<% books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <p><%= image_tag 'sample-author1.jpg' %></p>
    <p>name<%= book.user.name %></p>
    <p>introduction<%= book.introduction %></p>
  </div>
<% end %>

<h1>New book</h1>
<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>